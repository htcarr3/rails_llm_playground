<div class="mx-auto md:w-2/3 w-full">
  <% if notice %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Ruby LLM Chats" %>

  <div class="text-center mb-8">
    <h1 class="font-bold text-4xl mb-4 text-gray-800">RubyLLM Chats</h1>
  </div>

  <div id="chats" class="space-y-4 mb-8">
    <% @chats.each do |chat| %>
      <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow">
        <%= render chat %>
        <div class="mt-3">
          <%= link_to "Show this chat", chat, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium text-sm" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= link_to "New chat", new_chat_path, class: "rounded-md px-6 py-3 bg-gray-600 hover:bg-gray-500 text-white font-medium" %>
  </div>
</div>