<%= tag.div id: dom_id(message), class: "message mb-5 p-3 #{message.role == 'user' ? 'border-l-4 border-blue-500' : 'border-l-4 border-green-500'} bg-white rounded-lg shadow-sm" do %>
  <div class="font-bold mb-2 text-gray-800">
    <%= message.role&.capitalize %>
  </div>
  <div class="whitespace-pre-wrap text-gray-900 leading-relaxed"><%= message.content %></div>
  <div class="text-sm text-gray-500 mt-2">
    <%= message.created_at&.strftime("%I:%M %p") %>
  </div>
<% end %>