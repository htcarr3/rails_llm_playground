<nav class="fixed top-0 left-0 right-0 bg-white shadow-sm border-b border-gray-200 z-50">
  <div class="container mx-auto px-5">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand -->
      <div class="flex items-center">
        <%= link_to root_path, class: "text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors duration-200" do %>
          Rails LLM Playground
        <% end %>
      </div>
      
      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-8">

        <%= link_to "RubyLLM Models", models_path,
            class: "px-3 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors duration-200 #{request.path == models_path ? 'text-blue-600 bg-blue-50' : ''}" %>

        <%= link_to "RubyLLM Chats", chats_path,
                    class: "px-3 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors duration-200 #{request.path == chats_path ? 'text-blue-600 bg-blue-50' : ''}" %>

        <%= link_to "RAIF Conversations", raif_conversations_path, 
            class: "px-3 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors duration-200 #{request.path == raif_conversations_path ? 'text-blue-600 bg-blue-50' : ''}" %>
        
        <%= link_to "RAIX Chats", raix_chats_path, 
            class: "px-3 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors duration-200 #{request.path == raix_chats_path ? 'text-blue-600 bg-blue-50' : ''}" %>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500" 
                aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <!-- Menu icon -->
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
        <%= link_to "Chats", chats_path, 
            class: "block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors duration-200 #{request.path == chats_path ? 'text-blue-600 bg-blue-50' : ''}" %>
        
        <%= link_to "Models", models_path, 
            class: "block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors duration-200 #{request.path == models_path ? 'text-blue-600 bg-blue-50' : ''}" %>
        
        <%= link_to "RAIF Conversations", raif_conversations_path, 
            class: "block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors duration-200 #{request.path == raif_conversations_path ? 'text-blue-600 bg-blue-50' : ''}" %>
        
        <%= link_to "RAIX Chats", raix_chats_path, 
            class: "block px-3 py-2 text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-md transition-colors duration-200 #{request.path == raix_chats_path ? 'text-blue-600 bg-blue-50' : ''}" %>
      </div>
    </div>
  </div>
</nav>

<script>
  // Simple mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>