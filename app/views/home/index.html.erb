<div class="mx-auto md:w-2/3 w-full">
  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <div class="text-center">
    <h1 class="font-bold text-5xl mb-8">Rails LLM Playground</h1>
    <p class="text-xl text-gray-600 mb-8">Welcome to your AI-powered development environment</p>

    <% if authenticated? %>
      <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-8">
        <h2 class="text-2xl font-semibold text-green-800 mb-2">Welcome back!</h2>
        <p class="text-green-700">You are successfully logged in as <%= Current.user.email_address %></p>
      </div>
      
      <div class="flex justify-center gap-4">
        <%= link_to "View Raix Chats", raix_chats_path,
                    class: "rounded-md px-6 py-3 bg-gray-600 hover:bg-gray-500 text-white font-medium" %>
        <%= link_to "View RubyLLM Chats", chats_path,
                    class: "rounded-md px-6 py-3 bg-gray-600 hover:bg-gray-500 text-white font-medium" %>
        <%= link_to "View Raif Chats", raif_conversations_path,
                    class: "rounded-md px-6 py-3 bg-gray-600 hover:bg-gray-500 text-white font-medium" %>
        <%= button_to "Sign out", session_path, method: :delete,
            class: "rounded-md px-6 py-3 bg-gray-600 hover:bg-gray-500 text-white font-medium" %>
      </div>
    <% else %>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
        <h2 class="text-2xl font-semibold text-blue-800 mb-2">Get Started</h2>
        <p class="text-blue-700 mb-4">Sign up for an account or log in to access the playground</p>
      </div>
      
      <div class="flex justify-center gap-4">
        <%= link_to "Sign up", new_user_path, 
            class: "rounded-md px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
        <%= link_to "Sign in", new_session_path, 
            class: "rounded-md px-6 py-3 bg-gray-600 hover:bg-gray-500 text-white font-medium" %>
      </div>
    <% end %>
  </div>
</div>