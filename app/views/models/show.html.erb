<% content_for :title, @model.name %>

<div class="flex flex-col space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900"><%= @model.name %></h1>
  </div>

  <!-- Model Information Card -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Model Details</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500 uppercase tracking-wider">Model ID</dt>
          <dd class="mt-1 text-sm text-gray-900 font-mono bg-gray-50 px-3 py-2 rounded border"><%= @model.model_id %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500 uppercase tracking-wider">Provider</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @model.provider %></dd>
        </div>
      </div>
      
      <div class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500 uppercase tracking-wider">Context Window</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= number_with_delimiter(@model.context_window) %> tokens</dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500 uppercase tracking-wider">Max Output Tokens</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= number_with_delimiter(@model.max_output_tokens) %> tokens</dd>
        </div>
      </div>
    </div>
  </div>

  <!-- Capabilities Card -->
  <% if @model.capabilities.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Capabilities</h2>
      <div class="flex flex-wrap gap-2">
        <% @model.capabilities.each do |capability| %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
            <%= capability %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Actions -->
  <div class="flex flex-col sm:flex-row gap-4">
    <%= link_to "Start chat with this model", new_chat_path(model: @model.model_id), 
        class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition duration-200 text-center" %>
    
    <div class="flex flex-col sm:flex-row gap-4">
      <%= link_to "All models", models_path, 
          class: "text-blue-600 hover:text-blue-800 font-medium py-3 px-6 border border-blue-600 rounded-lg transition duration-200 text-center hover:bg-blue-50" %>
      <%= link_to "← Back to chats", chats_path, 
          class: "text-gray-600 hover:text-gray-800 font-medium py-3 px-6 transition duration-200 text-center" %>
    </div>
  </div>
</div>