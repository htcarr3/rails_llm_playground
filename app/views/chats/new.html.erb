<div class="mx-auto md:w-2/3 w-full max-w-md">
  <div class="bg-white border border-gray-200 rounded-lg p-8">
    <div class="text-center mb-8">
      <h1 class="font-bold text-3xl text-gray-900 mb-2">Start New Conversation</h1>
      <p class="text-gray-600">Choose an AI model to chat with</p>
    </div>

    <%= form_with model: @chat, local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :model_id, "AI Model", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :model_id, 
            options_for_select([
              ["GPT-3.5 Turbo (Fast & Cost-effective)", "gpt-3.5-turbo"],
              ["GPT-4 (Most Capable)", "gpt-4"],
              ["GPT-4 Turbo (Latest)", "gpt-4-turbo-preview"]
            ], "gpt-3.5-turbo"),
            {},
            { 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            } %>
        <p class="mt-1 text-sm text-gray-500">
          Different models have varying capabilities and costs. GPT-3.5 Turbo is recommended for most conversations.
        </p>
      </div>

      <div class="flex justify-between pt-4">
        <%= link_to "Cancel", chats_path, 
            class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium" %>
        <%= form.submit "Start Chatting", 
            class: "rounded-md px-6 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-500">
      Your conversations are private and associated with your account.
    </p>
  </div>
</div>