<div class="mx-auto md:w-2/3 w-full">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl">Your Conversations</h1>
    <%= button_to "Start New Conversation", raif_conversations_path,
                  class: "rounded-md px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
  </div>

  <% if @conversations.any? %>
    <div class="space-y-4">
      <% @conversations.each do |conversation| %>
        <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
          <%= link_to raif_conversation_path(conversation), class: "block" do %>
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <h3 class="text-lg font-medium text-gray-900 mb-2">
                  <% if conversation.entries.any? %>
                    <%= truncate(conversation.entries.first.raw_response, length: 60) %>
                  <% else %>
                    New conversation
                  <% end %>
                </h3>
                <div class="flex items-center text-sm text-gray-500 space-x-4">
                  <span><%= conversation.entries.count %> messages</span>
                  <span>Model: <%= conversation.llm_model_key %></span>
                  <span><%= time_ago_in_words(conversation.updated_at) %> ago</span>
                </div>
              </div>
              <div class="ml-4">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No conversations yet</h3>
      <p class="text-gray-500 mb-6">Start your first conversation with an AI assistant</p>
      <%= button_to "Start New Chat", raif_conversations_path,
                    class: "rounded-md px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>