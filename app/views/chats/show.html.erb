<div class="mx-auto md:w-2/3 w-full h-screen flex flex-col">
  <!-- Header -->
  <div class="bg-white border-b border-gray-200 px-6 py-4 flex justify-between items-center">
    <div>
      <h1 class="text-xl font-semibold text-gray-900">Chat</h1>
      <p class="text-sm text-gray-500">Model: <%= @chat.model_id %></p>
    </div>
    <div class="flex space-x-2">
      <%= link_to "All Chats", chats_path, 
          class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium" %>
      <%= link_to "New Chat", new_chat_path, 
          class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
    </div>
  </div>

  <!-- Messages Container -->
  <div class="flex-1 overflow-y-auto p-6" id="messages-container">
    <div class="space-y-6 max-w-4xl mx-auto">
      <% if @chat.messages.any? %>
        <% @chat.messages.each do |message| %>
          <div class="flex <%= message.role == 'user' ? 'justify-end' : 'justify-start' %>">
            <div class="max-w-xs lg:max-w-md px-4 py-2 rounded-lg <%= message.role == 'user' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-900' %>">
              <div class="text-xs font-medium mb-1 <%= message.role == 'user' ? 'text-blue-100' : 'text-gray-500' %>">
                <%= message.role.capitalize %>
              </div>
              <div class="text-sm whitespace-pre-wrap"><%= message.content %></div>
              <% if message.model_id.present? %>
                <div class="text-xs mt-1 <%= message.role == 'user' ? 'text-blue-100' : 'text-gray-400' %>">
                  <%= message.model_id %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-12">
          <div class="mx-auto w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">Start the conversation</h3>
          <p class="text-gray-500">Send your first message to begin chatting with the AI</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Message Input Form -->
  <div class="bg-white border-t border-gray-200 p-4">
    <%= form_with model: [@chat, @message], local: true, class: "flex space-x-4" do |form| %>
      <div class="flex-1">
        <%= form.text_area :content, 
            placeholder: "Type your message here...", 
            rows: 1,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            onkeydown: "if(event.key==='Enter' && !event.shiftKey){event.preventDefault(); this.form.submit();}" %>
      </div>
      <%= form.submit "Send", 
          class: "rounded-lg px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
    <% end %>
    <p class="text-xs text-gray-500 mt-2">Press Enter to send, Shift+Enter for new line</p>
  </div>
</div>

<script>
  // Auto-scroll to bottom of messages
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('messages-container');
    if (container) {
      container.scrollTop = container.scrollHeight;
    }
  });

  // Auto-resize textarea
  document.addEventListener('input', function(event) {
    if (event.target.tagName === 'TEXTAREA') {
      event.target.style.height = 'auto';
      event.target.style.height = (event.target.scrollHeight) + 'px';
    }
  });
</script>