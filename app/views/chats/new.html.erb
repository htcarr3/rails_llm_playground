<% content_for :title, "New chat" %>

<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-sm">
  <!-- Header -->
  <div class="mb-8 pb-4 border-b border-gray-200">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">New Chat</h1>
    <p class="text-gray-600">Start a conversation with your AI assistant</p>
  </div>

  <!-- Form Container -->
  <div class="mb-8 p-6 bg-gray-50 rounded-lg border border-gray-200">
    <%= render "form", chat: @chat %>
  </div>

  <!-- Navigation -->
  <div class="flex justify-start pt-4 border-t border-gray-200">
    <%= link_to "Back to chats", chats_path, 
        class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 hover:text-gray-900 transition-colors duration-200" %>
  </div>
</div>